begin

	s_dataout <= c_memory(((texture_id * 16 * 16) + x  + y*16));										  

	color_map : process(s_dataout)
	begin	
		if (s_dataout = 1) then
			ARGB <= "1" & "110";
		else
			ARGB <= "0" & "000";
		end if ;
	end process;

end;

